{{setTitle (join offer.brand ' - ' offer.model)}}

<section class="details-hero">
    <div class="container">
        <h2>Laptop Details</h2>
    </div>
</section>

<section class="details-content">
    <div class="container">
        <div class="product-details">
            <div class="product-image">
                <img src="{{offer.image}}" alt="Laptop">
            </div>
            <div class="product-info">
                <h3>Brand: {{offer.brand}}</h3>
                <p><strong>Model:</strong> {{offer.model}}</p>
                <p><strong>Hard Disk:</strong> {{offer.hardDisk}}</p>
                <p><strong>Screen Size:</strong> {{offer.screenSize}}</p>
                <p><strong>RAM:</strong> {{offer.ram}}</p>
                <p><strong>Operating System:</strong> {{offer.operatingSystem}}</p>
                <p><strong>CPU:</strong> {{offer.cpu}}</p>
                <p><strong>GPU:</strong> {{offer.gpu}}</p>
                <p><strong>Price:</strong> {{offer.price}}</p>
                <p><strong>Color:</strong> {{offer.color}}</p>
                <p><strong>Weight:</strong> {{offer.weight}}</p>
            </div>
        </div>
        {{#if user}}
        <div class="product-actions">
            {{#if isOwner}}
            <button class="btn edit"><a href="/offer/edit/{{offer.id}}">Edit</a></button>
            <button class="btn delete"><a href="/offer/delete/{{offer.id}}">Delete</a></button>
            {{else}}
            {{#if isPreferred}}
            <p class="prefer-message">You've already preferred this device</p>
            <button class="btn unprefer"><a href="/offer/unprefer/{{offer.id}}">Unprefer</a></button>
            {{else}}
            <button class="btn prefer"><a href="/offer/prefer/{{offer.id}}">Prefer</a></button>
            {{/if}}
            {{/if}}
        </div>
        {{/if}}
    </div>
</section>